{
    "manifest_version": 3,
    "name": "wizarmark",
    "version": "1.0",
    "description": "A simple extension to bookmark websites",
    "permissions": [
        "activeTab",
        "tabs",
        "bookmarks",
        "sidePanel",
        "storage",
        "scripting"
    ],
    "side_panel": {
        "default_path": "sidepanel/sidepanel.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }  
    },
    "background": {
        "service_worker": "background.js"
    }
}